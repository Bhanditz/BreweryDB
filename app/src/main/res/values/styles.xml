<resources>
  <style name="card">
    <item name="android:layout_margin">@dimen/padding_small</item>
    <item name="android:background">@android:color/white</item>
    <item name="cardUseCompatPadding">true</item>
    <item name="cardElevation">2dp</item>
    <item name="cardCornerRadius">3dp</item>
    <item name="android:clickable">true</item>
  </style>

  <style name="toolbar_expanded_title">
    <item name="android:textColor">@android:color/transparent</item>
  </style>

  <style name="toolbar_collapsed_title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="aboutSection">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/white</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:layout_marginTop">@dimen/padding_big</item>
  </style>

  <style name="libraryItem">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:textSize">@dimen/text_size_normal</item>
    <item name="android:textColor">@color/gray_2</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:clickable">true</item>
    <item name="android:paddingLeft">@dimen/padding_big</item>
  </style>

  <style name="Button">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textSize">@dimen/text_size_normal</item>
  </style>

  <style name="Button.Rounded" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:background">@drawable/rounded_button</item>
    <item name="android:textColor">@color/rounded_button</item>
    <item name="android:textAllCaps">false</item>
  </style>

</resources>
