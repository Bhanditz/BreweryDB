<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

  <com.txusballesteros.brewerydb.view.widgets.LineLevelView
      android:id="@+id/abv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:minValue="0"
      app:maxValue="10"
      app:mainLineWeight="2dp"
      app:mainLineColor="@color/colorAccent"
      app:referenceBackgroundColor="@color/colorPrimaryLight"
      app:referenceLineWeight="1dp"
      app:showReferenceBackground="true" />

  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/abvTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:fontFamily="sans-serif-thin"
      android:textColor="@color/gray_2"
      android:gravity="center"
      android:textSize="@dimen/text_size_normal"
      tools:text="ABV: 4.5"/>

</RelativeLayout>