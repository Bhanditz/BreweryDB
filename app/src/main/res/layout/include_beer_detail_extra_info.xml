<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/padding_normal"
      android:paddingBottom="@dimen/padding_normal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/appCompatImageView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:tint="@color/gray_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/appCompatImageView4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_glass_mug" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/Text.Light"
        android:id="@+id/glass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/appCompatImageView3"
        app:layout_constraintRight_toLeftOf="@+id/appCompatImageView4"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3"
        tools:text="Pilsner" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/appCompatImageView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:tint="@color/gray_2"
        app:srcCompat="@drawable/ic_thermometer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/appCompatImageView6"
        app:layout_constraintLeft_toRightOf="@+id/appCompatImageView3" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/Text.Light"
        android:id="@+id/temperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="5 ÂºC"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/appCompatImageView4"
        app:layout_constraintRight_toLeftOf="@+id/appCompatImageView6"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView4" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/appCompatImageView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:tint="@color/gray_2"
        app:layout_constraintLeft_toRightOf="@+id/appCompatImageView4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_tree" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/Text.Light"
        android:id="@+id/organic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Is Organic"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/appCompatImageView6"
        app:layout_constraintRight_toRightOf="@+id/appCompatImageView6"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView6" />

  </android.support.constraint.ConstraintLayout>
</merge>