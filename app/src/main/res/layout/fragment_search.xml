<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    android:paddingTop="@dimen/padding_normal">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <FrameLayout
        android:id="@+id/keywordSearchHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/padding_big"
        android:layout_marginRight="@dimen/padding_big"
        android:layout_marginTop="@dimen/padding_big"
        android:background="@color/gray_4"
        android:layout_height="0.5dp" />

    <FrameLayout
        android:id="@+id/styleSearchHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/padding_big"
        android:layout_marginRight="@dimen/padding_big"
        android:layout_marginBottom="@dimen/padding_big"
        android:background="@color/gray_4"
        android:layout_height="0.5dp" />

    <FrameLayout
        android:id="@+id/abvSearchHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/include_line_decorator" />

    <FrameLayout
        android:id="@+id/ibuSearchHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/include_line_decorator" />

    <FrameLayout
        android:id="@+id/isOrganicSearchHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/include_line_decorator" />

  </LinearLayout>
</android.support.v4.widget.NestedScrollView>