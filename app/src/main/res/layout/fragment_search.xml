<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    android:paddingTop="@dimen/padding_normal">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <FrameLayout
        android:id="@+id/keywordSearchHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/padding_big"
        android:layout_marginRight="@dimen/padding_big"
        android:layout_marginTop="@dimen/padding_big"
        android:background="@color/gray_4"
        android:layout_height="0.5dp" />

    <FrameLayout
        android:id="@+id/styleSearchHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/padding_big"
        android:layout_marginRight="@dimen/padding_big"
        android:background="@color/gray_4"
        android:layout_height="0.5dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/brewery"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/gray_2"
        android:fontFamily="sans-serif"
        android:gravity="left|center_vertical"
        android:text="@string/brewery"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/padding_big"
        android:layout_marginRight="@dimen/padding_big"
        android:layout_marginBottom="@dimen/padding_big"
        android:background="@color/gray_4"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_normal"
        android:layout_marginRight="@dimen/padding_normal"
        android:orientation="horizontal">

      <android.support.v7.widget.AppCompatTextView
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_normal"
          android:textColor="@color/gray_2"
          android:fontFamily="sans-serif"
          android:text="Is Organic:"/>

      <android.support.v7.widget.SwitchCompat
          android:id="@+id/isOrganic"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

    </LinearLayout>

    <include layout="@layout/include_line_decorator" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/gray_2"
        android:layout_marginLeft="@dimen/padding_normal"
        android:fontFamily="sans-serif"
        android:text="@string/abv"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_normal"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/gray_3"
        android:fontFamily="sans-serif"
        android:text="@string/alcohol_by_volume"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_normal"
        android:layout_marginRight="@dimen/padding_normal"
        android:orientation="horizontal">

      <android.support.v7.widget.AppCompatEditText
          android:id="@+id/abvMin"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_normal"
          android:textColor="@color/colorPrimaryDark"
          android:textColorHint="@color/gray_3"
          android:inputType="number"
          android:gravity="right"
          android:maxLength="3"
          android:hint="@string/min" />

      <android.support.v7.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_normal"
          android:textColor="@color/colorPrimaryDark"
          android:layout_marginLeft="@dimen/padding_normal"
          android:layout_marginRight="@dimen/padding_normal"
          android:text="-" />

      <android.support.v7.widget.AppCompatEditText
          android:id="@+id/abvMax"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_normal"
          android:textColor="@color/colorPrimaryDark"
          android:textColorHint="@color/gray_3"
          android:inputType="number"
          android:gravity="right"
          android:maxLength="3"
          android:hint="@string/max" />

    </LinearLayout>

    <include layout="@layout/include_line_decorator" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_normal"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/gray_2"
        android:fontFamily="sans-serif"
        android:text="@string/ibu"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_normal"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/gray_3"
        android:fontFamily="sans-serif"
        android:text="@string/international_bitterness_units"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_normal"
        android:layout_marginRight="@dimen/padding_normal"
        android:orientation="horizontal">

      <android.support.v7.widget.AppCompatEditText
          android:id="@+id/ibuMin"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_normal"
          android:textColor="@color/colorPrimaryDark"
          android:textColorHint="@color/gray_3"
          android:inputType="number"
          android:gravity="right"
          android:maxLength="3"
          android:hint="@string/min" />

      <android.support.v7.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_normal"
          android:textColor="@color/colorPrimaryDark"
          android:layout_marginLeft="@dimen/padding_normal"
          android:layout_marginRight="@dimen/padding_normal"
          android:text="-" />

      <android.support.v7.widget.AppCompatEditText
          android:id="@+id/ibuMax"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_normal"
          android:textColor="@color/colorPrimaryDark"
          android:textColorHint="@color/gray_3"
          android:inputType="number"
          android:gravity="right"
          android:maxLength="3"
          android:hint="@string/max" />

    </LinearLayout>

    <include layout="@layout/include_line_decorator" />

  </LinearLayout>
</android.support.v4.widget.NestedScrollView>